&i2c1{
    compatible = "nordic,nrf-twim";
	status = "okay";
    lis2dw12@19 {
        compatible  = "st,lis2dw12";
        reg = <0x19>;
        label = "LIS2DW12";
        int-pin = < 1 >;
    };
};

&uart0 {
    status = "disabled";
};



